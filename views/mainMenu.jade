extends layout

block moreImports
  script(src="/javascripts/angular/angular.min.js")
  script(src="javascripts/login/mainMenu.js")
  link(rel='stylesheet', href='/javascripts/bootstrap/dist/css/bootstrap.css')
  link(rel='stylesheet', href='/stylesheets/comClub.css')
block content
  div(class="container" ng-app="mainMenuApp")
    div(class="panel panel-default main")
      h1= title
      form(name="enter-room-form", ng-controller="enterRoomCtrlr", action="/login", method="POST")
        div(class="btn-div")
          input(type="text", name="playerName", ng-model="username", placeholder="Player Name", required)
        div(class="btn-div")
          input(type="text", name="roomNum", ng-model="roomNumber", placeholder="Room Number")
        div(class="btn-div")
          button(class="btn btn-primary") Enter room
      
